<Window x:Class="WPFBudgetPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBudgetPlanner"
        mc:Ignorable="d"
        Title="Budget Planner" Height="600" Width="1100" MinWidth="900" MinHeight="500">
    <TabControl Margin="8">
        <TabItem Header="Budget">
            <ContentControl Content="{Binding Budget}" />
        </TabItem>
        <TabItem Header="Transactions">
            <ContentControl Content="{Binding Transactions}" />
        </TabItem>
        <TabItem Header="Settings">
            <Grid Margin="8" DataContext="{Binding Budget}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border HorizontalAlignment="Center" VerticalAlignment="Top" Padding="28" CornerRadius="6" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" Margin="0,24,0,0" Background="{StaticResource BackgroundBrush}">
                    <StackPanel Width="380" HorizontalAlignment="Center">
                        <TextBlock Text="User Settings" FontWeight="Bold" FontSize="20" Margin="0 0 0 16" HorizontalAlignment="Center" Foreground="{StaticResource TextBrush}" />

                        <StackPanel Margin="0 10 0 0">
                            <TextBlock Text="Annual Income (SEK)" FontWeight="SemiBold" FontSize="14" Margin="0 0 0 6" HorizontalAlignment="Center" Foreground="{StaticResource MutedTextBrush}" />
                            <TextBox Text="{Binding AnnualIncome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N2}"
                                     Width="220" Height="34" FontSize="18" HorizontalAlignment="Center" VerticalContentAlignment="Center" Style="{StaticResource InputTextBox}" />
                        </StackPanel>

                        <StackPanel Margin="0 16 0 0">
                            <TextBlock Text="Work hours/year" FontWeight="SemiBold" FontSize="14" Margin="0 0 0 6" HorizontalAlignment="Center" Foreground="{StaticResource MutedTextBrush}" />
                            <TextBox Text="{Binding AnnualWorkHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Width="220" Height="34" FontSize="18" HorizontalAlignment="Center" VerticalContentAlignment="Center" Style="{StaticResource InputTextBox}" />
                        </StackPanel>

                        <Button Content="Save" Width="140" Height="36" Margin="0 20 0 0" HorizontalAlignment="Center" Click="OnSettingsSaveClick" Style="{StaticResource PrimaryButton}" />
                    </StackPanel>
                </Border>
            </Grid>
        </TabItem>
    </TabControl>
</Window>
