<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:WPFBudgetPlanner.Models">

    <Style TargetType="TextBlock" x:Key="PanelHeaderText">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style TargetType="TextBox" x:Key="InputTextBox">
        <Setter Property="Padding" Value="6" />
        <Setter Property="Height" Value="28" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style TargetType="ComboBox" x:Key="InputComboBox">
        <Setter Property="Height" Value="28" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style TargetType="DatePicker" x:Key="InputDatePicker">
        <Setter Property="Height" Value="28" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinWidth" Value="90" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style TargetType="TextBlock" x:Key="AmountText">
        <Setter Property="Text" Value="{Binding Amount, StringFormat=N2}" />
        <Setter Property="TextAlignment" Value="Right" />
    </Style>
    <Style TargetType="TextBlock" x:Key="DateText">
        <Setter Property="Text" Value="{Binding Date, StringFormat=d}" />
    </Style>

    <Style x:Key="IncomeButtonStyle" TargetType="Button">
        <Setter Property="IsEnabled" Value="False" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding NewCategory}" Value="{x:Static models:Category.Salary}">
                <Setter Property="IsEnabled" Value="True" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ExpenseButtonStyle" TargetType="Button">
        <Setter Property="IsEnabled" Value="True" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding NewCategory}" Value="{x:Static models:Category.Salary}">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TopRecurrenceComboStyle" TargetType="ComboBox" BasedOn="{StaticResource InputComboBox}">
        <Setter Property="IsEnabled" Value="True" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding NewCategory}" Value="{x:Static models:Category.Salary}">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TopMonthComboStyle" TargetType="ComboBox" BasedOn="{StaticResource InputComboBox}">
        <Setter Property="IsEnabled" Value="True" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding NewCategory}" Value="{x:Static models:Category.Salary}">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>