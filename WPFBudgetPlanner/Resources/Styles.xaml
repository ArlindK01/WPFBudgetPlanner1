<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:WPFBudgetPlanner.Models">

    <Style TargetType="TextBlock" x:Key="PanelHeaderText">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="22" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>

    <Style TargetType="TextBox" x:Key="InputTextBox">
        <Setter Property="Padding" Value="6" />
        <Setter Property="Height" Value="28" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style TargetType="ComboBox" x:Key="InputComboBox">
        <Setter Property="Height" Value="28" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style TargetType="DatePicker" x:Key="InputDatePicker">
        <Setter Property="Height" Value="28" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinWidth" Value="90" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <Style TargetType="Button" x:Key="RefreshButtonStyle" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Background" Value="{StaticResource RefreshButtonBrush}" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <Style TargetType="TextBlock" x:Key="AmountText">
        <Setter Property="Text" Value="{Binding Amount, StringFormat=N0}" />
        <Setter Property="TextAlignment" Value="Right" />
    </Style>
    <Style TargetType="TextBlock" x:Key="DateText">
        <Setter Property="Text" Value="{Binding Date, StringFormat=d}" />
    </Style>

    <Style x:Key="IncomeButtonStyle" TargetType="Button">
        <Setter Property="IsEnabled" Value="False" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding NewCategory}" Value="{x:Static models:Category.Salary}">
                <Setter Property="IsEnabled" Value="True" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ExpenseButtonStyle" TargetType="Button">
        <Setter Property="IsEnabled" Value="True" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding NewCategory}" Value="{x:Static models:Category.Salary}">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TopRecurrenceComboStyle" TargetType="ComboBox" BasedOn="{StaticResource InputComboBox}">
        <Setter Property="IsEnabled" Value="True" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding NewCategory}" Value="{x:Static models:Category.Salary}">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TopMonthComboStyle" TargetType="ComboBox" BasedOn="{StaticResource InputComboBox}">
        <Setter Property="IsEnabled" Value="True" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding NewCategory}" Value="{x:Static models:Category.Salary}">
                <Setter Property="IsEnabled" Value="False" />
            </DataTrigger>
        </Style.Triggers>
    </Style>

    <Style TargetType="TextBox" x:Key="TopInputTextBox" BasedOn="{StaticResource InputTextBox}">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="Foreground" Value="{StaticResource InputTextBrush}" />
    </Style>
    <Style TargetType="ComboBox" x:Key="TopInputComboBox" BasedOn="{StaticResource InputComboBox}">
        <Setter Property="Background" Value="{StaticResource InputBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="Foreground" Value="{StaticResource InputTextBrush}" />
    </Style>
    <Style TargetType="ListView" x:Key="TransactionsListView">
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}" />
    </Style>
    <Style TargetType="GridViewColumnHeader">
        <Setter Property="Background" Value="{StaticResource ListHeaderBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource ListHeaderTextBrush}" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="6" />
    </Style>
    <Style TargetType="TextBlock" x:Key="AmountCellText">
        <Setter Property="Foreground" Value="{StaticResource IncomeBrush}" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding TransactionType}" Value="{x:Static models:TransactionType.Expense}">
                <Setter Property="Foreground" Value="{StaticResource ExpenseBrush}" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="Button" x:Key="ActionButton" BasedOn="{StaticResource PrimaryButton}">
        <Setter Property="Foreground" Value="#0D47A1" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="root" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="root" Property="Background" Value="{StaticResource ActionButtonHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ActionRadioButton" TargetType="RadioButton">
        <Setter Property="Foreground" Value="#0D47A1" />
        <Setter Property="Background" Value="{StaticResource ActionButtonBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="MinWidth" Value="90" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <Border x:Name="root" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="root" Property="Background" Value="{StaticResource ActionButtonHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="root" Property="Background" Value="{StaticResource ActionButtonHoverBrush}" />
                            <Setter TargetName="root" Property="BorderBrush" Value="{StaticResource PrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>