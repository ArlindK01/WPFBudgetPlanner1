<UserControl x:Class="WPFBudgetPlanner.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="User Settings" FontWeight="Bold" FontSize="16" Margin="0 0 0 8" />
        <GroupBox Header="Settings" Grid.Row="1">
            <Grid Margin="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="160" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Annual Income:" VerticalAlignment="Center" />
                <TextBox Grid.Column="1" Text="{Binding AnnualIncome, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Style="{StaticResource InputTextBox}" />
                <TextBlock Grid.Column="2" Margin="16 0 0 0" Text="Work hours/year:" VerticalAlignment="Center" />
                <TextBox Grid.Column="3" Text="{Binding AnnualWorkHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Style="{StaticResource InputTextBox}" />
                <TextBlock Grid.Column="4" Margin="16 0 0 0" Text="Currency:" VerticalAlignment="Center" />
                <TextBox Grid.Column="5" Text="{Binding Currency, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource InputTextBox}" />
                <Button Grid.Column="6" Content="Save" Width="80" Margin="16 0 0 0" Click="OnSaveSettingsClick" Style="{StaticResource PrimaryButton}" />
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>