<UserControl x:Class="WPFBudgetPlanner.Views.TransactionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="clr-namespace:WPFBudgetPlanner.Models">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="CategoryValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:Category" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="RecurrenceTypeValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:RecurrenceType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="TransactionTypeValues" MethodName="GetValues" ObjectType="{x:Type sys:Enum}" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="models:TransactionType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <x:Array x:Key="MonthValues" Type="sys:Int32" xmlns:sys="clr-namespace:System;assembly=mscorlib">
            <sys:Int32>1</sys:Int32><sys:Int32>2</sys:Int32><sys:Int32>3</sys:Int32><sys:Int32>4</sys:Int32><sys:Int32>5</sys:Int32><sys:Int32>6</sys:Int32><sys:Int32>7</sys:Int32><sys:Int32>8</sys:Int32><sys:Int32>9</sys:Int32><sys:Int32>10</sys:Int32><sys:Int32>11</sys:Int32><sys:Int32>12</sys:Int32>
        </x:Array>
        <Style TargetType="TextBox" x:Key="TopInputTextBox" BasedOn="{StaticResource InputTextBox}" />
        <Style TargetType="ComboBox" x:Key="TopInputComboBox" BasedOn="{StaticResource InputComboBox}" />
    </UserControl.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Margin="0 0 0 12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="160" />
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Amount" FontSize="12" Margin="0,0,0,4" />
                <TextBox Style="{StaticResource TopInputTextBox}" Text="{Binding NewAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock Text="Category" FontSize="12" Margin="0,0,0,4" />
                <ComboBox Style="{StaticResource TopInputComboBox}" ItemsSource="{Binding Source={StaticResource CategoryValues}}" SelectedItem="{Binding NewCategory, Mode=TwoWay}" ItemTemplate="{StaticResource CategoryItemTemplate}" />
            </StackPanel>
            <StackPanel Grid.Column="2">
                <TextBlock Text="Description" FontSize="12" Margin="0,0,0,4" />
                <TextBox Style="{StaticResource TopInputTextBox}" Text="{Binding NewDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel Grid.Column="3">
                <TextBlock Text="Recurrence" FontSize="12" Margin="0,0,0,4" />
                <ComboBox Style="{StaticResource TopInputComboBox}" ItemsSource="{Binding Source={StaticResource RecurrenceTypeValues}}" SelectedItem="{Binding NewRecurrenceType, Mode=TwoWay}" ItemTemplate="{StaticResource RecurrenceItemTemplate}" />
            </StackPanel>
            <StackPanel Grid.Column="4">
                <TextBlock Text="Month" FontSize="12" Margin="0,0,0,4" />
                <ComboBox Style="{StaticResource TopInputComboBox}" ItemsSource="{StaticResource MonthValues}" SelectedItem="{Binding NewRecurrenceMonth, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Grid.Column="5" Orientation="Vertical" VerticalAlignment="Bottom">
                <Button Content="Income" Width="110" Height="28" Command="{Binding AddIncomeCommand}" Style="{StaticResource IncomeButtonStyle}" />
            </StackPanel>
            <StackPanel Grid.Column="6" Orientation="Vertical" VerticalAlignment="Bottom">
                <Button Content="Expense" Width="110" Height="28" Command="{Binding AddExpenseCommand}" Style="{StaticResource ExpenseButtonStyle}" />
            </StackPanel>
        </Grid>

        <ListView Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}" BorderThickness="1" BorderBrush="{StaticResource BorderBrush}">
            <ListView.View>
                <GridView AllowsColumnReorder="false">
                    <GridViewColumn Header="Amount" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock x:Name="AmountDisplay" Text="{Binding Amount, StringFormat=N2}" VerticalAlignment="Center" />
                                    <TextBox x:Name="AmountEdit" Text="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Visibility="Collapsed" />
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                        <Setter TargetName="AmountDisplay" Property="Visibility" Value="Collapsed" />
                                        <Setter TargetName="AmountEdit" Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Category" Width="160">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ContentPresenter x:Name="CategoryDisplay" Content="{Binding Category}" ContentTemplate="{StaticResource CategoryItemTemplate}" />
                                    <ComboBox x:Name="CategoryEdit" ItemsSource="{Binding Source={StaticResource CategoryValues}}" SelectedItem="{Binding Category, Mode=TwoWay}" ItemTemplate="{StaticResource CategoryItemTemplate}" Visibility="Collapsed" />
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                        <Setter TargetName="CategoryDisplay" Property="Visibility" Value="Collapsed" />
                                        <Setter TargetName="CategoryEdit" Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Description" Width="220">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock x:Name="DescriptionDisplay" Text="{Binding Description}" VerticalAlignment="Center" />
                                    <TextBox x:Name="DescriptionEdit" Text="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="Collapsed" />
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                        <Setter TargetName="DescriptionDisplay" Property="Visibility" Value="Collapsed" />
                                        <Setter TargetName="DescriptionEdit" Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Date" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock x:Name="DateDisplay" Text="{Binding Date, StringFormat=d}" VerticalAlignment="Center" />
                                    <DatePicker x:Name="DateEdit" SelectedDate="{Binding Date, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="Collapsed" />
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                        <Setter TargetName="DateDisplay" Property="Visibility" Value="Collapsed" />
                                        <Setter TargetName="DateEdit" Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Type" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ContentPresenter x:Name="TypeDisplay" Content="{Binding TransactionType}" ContentTemplate="{StaticResource TransactionTypeItemTemplate}" />
                                    <ComboBox x:Name="TypeEdit" ItemsSource="{Binding Source={StaticResource TransactionTypeValues}}" SelectedItem="{Binding TransactionType, Mode=TwoWay}" ItemTemplate="{StaticResource TransactionTypeItemTemplate}" Visibility="Collapsed" IsEnabled="False" />
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                        <Setter TargetName="TypeDisplay" Property="Visibility" Value="Collapsed" />
                                        <Setter TargetName="TypeEdit" Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Recurrence" Width="110">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <ContentPresenter x:Name="RecurTypeDisplay" Content="{Binding RecurrenceType}" ContentTemplate="{StaticResource RecurrenceItemTemplate}" />
                                    <ComboBox x:Name="RecurTypeEdit" ItemsSource="{Binding Source={StaticResource RecurrenceTypeValues}}" SelectedItem="{Binding RecurrenceType, Mode=TwoWay}" ItemTemplate="{StaticResource RecurrenceItemTemplate}" Visibility="Collapsed" />
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                        <Setter TargetName="RecurTypeDisplay" Property="Visibility" Value="Collapsed" />
                                        <Setter TargetName="RecurTypeEdit" Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Category}" Value="{x:Static models:Category.Salary}">
                                        <Setter TargetName="RecurTypeEdit" Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="Month" Width="90">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <TextBlock x:Name="RecurMonthDisplay" Text="{Binding RecurrenceMonth}" VerticalAlignment="Center" />
                                    <ComboBox x:Name="RecurMonthEdit" ItemsSource="{StaticResource MonthValues}" SelectedItem="{Binding RecurrenceMonth, Mode=TwoWay}" Visibility="Collapsed" />
                                </Grid>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                        <Setter TargetName="RecurMonthDisplay" Property="Visibility" Value="Collapsed" />
                                        <Setter TargetName="RecurMonthEdit" Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Category}" Value="{x:Static models:Category.Salary}">
                                        <Setter TargetName="RecurMonthEdit" Property="IsEnabled" Value="False" />
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 12 0 0" HorizontalAlignment="Left">
            <Button Content="Edit" Command="{Binding EditSelectedCommand}" Width="90" />
            <Button Content="Save" Command="{Binding SaveEditCommand}" Width="90" Margin="8 0 0 0" />
            <Button Content="Cancel" Command="{Binding CancelEditCommand}" Width="90" Margin="8 0 0 0" />
            <Button Content="Delete" Command="{Binding DeleteSelectedCommand}" Width="90" Margin="8 0 0 0" />
        </StackPanel>
    </Grid>
</UserControl>